    qproperty-alignment: AlignCenter;
    font-style: italic;
    margin: 10px 0;
}

QLabel#albumDescLabel {
    margin-bottom: 10px;
}

QLabel[class^="albumTrackLabel_"] {
    margin-left: 10px;
    margin-bottom: 4px;
}


/* Tour */
QLabel#tourImageLabel {
    border: 1px solid gray;
