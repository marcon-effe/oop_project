/* Album */
QLabel#albumImageLabel {
    border: 1px solid gray;
    border-radius: 4px;
}

QLabel#albumTitleLabel {
    qproperty-alignment: AlignCenter;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 8px;
}

