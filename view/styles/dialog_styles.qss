#prodottoForm_campiSpecificiContainer {
    background-color: #ffffff;
    border: 1px dashed #cccccc;
    border-radius: 4px;
    padding: 8px;
    margin-top: 8px;
}

#prodottoForm_partecipantiSingoloWidget,
#prodottoForm_tracceWidget {
    background-color: #ffffff;
    border: 1px dashed #cccccc;
    border-radius: 4px;
    padding: 6px;
    margin-bottom: 8px;
}

#prodottoForm_disponibileCheck,
#prodottoForm_hasTestoTracciaCheck,
#prodottoForm_remixCheck {
    spacing: 4px;
    padding: 2px;
}