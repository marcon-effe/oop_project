#artistForm_mainWidget,
#prodottoForm_mainWidget {
    background-color: #f5f5f5;
    border: 1px solid #cccccc;
    border-radius: 6px;
    padding: 12px;
}

#artistForm_editNome,
#artistForm_editGenere,
#artistForm_editImagePath,
#artistForm_txtInfo,

#prodottoForm_titoloEdit,
#prodottoForm_imagePathEdit,
#prodottoForm_descrizioneEdit,
#prodottoForm_codiceProdottoEdit,
#prodottoForm_produttoreStampeEdit,
#prodottoForm_codiceRiconoscimentoEdit,
#prodottoForm_tipoProdottoEdit,
#prodottoForm_formatoEdit,
#prodottoForm_tagliaEdit,
#prodottoForm_coloreEdit,
#prodottoForm_rpmSpin,
#prodottoForm_diametroSpin,
#prodottoForm_dataUscitaEdit,
#prodottoForm_genereEdit,
#prodottoForm_nomeTracciaEdit,
#prodottoForm_testoTracciaEdit,
#prodottoForm_labelEdit,
#prodottoForm_tracciaNomeEdit,
#prodottoForm_tracciaTestoEdit {
    background-color: #ffffff;
    border: 1px solid #aaaaaa;
    border-radius: 3px;
    padding: 4px 6px;
    selection-background-color: #cce4ff;
}

#artistForm_txtInfo {
    padding: 6px;
}

#artistForm_editNome:focus,
#artistForm_editGenere:focus,
#artistForm_editImagePath:focus,
#artistForm_txtInfo:focus {
    border: 1px solid #0055aa;
}

#artistForm_btnSelectImage,
#prodottoForm_confermaArtistaBtn,
#prodottoForm_btnSfoglia,
#prodottoForm_aggiungiPartecipanteSingoloBtn,
#prodottoForm_aggiungiTracciaBtn,
#prodottoForm_tracciaAggiungiPartecipanteBtn {
    background-color: #007acc;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 6px 12px;
}
#artistForm_btnSelectImage:hover,
#prodottoForm_confermaArtistaBtn:hover,
#prodottoForm_btnSfoglia:hover,
#prodottoForm_aggiungiPartecipanteSingoloBtn:hover,
#prodottoForm_aggiungiTracciaBtn:hover,
#prodottoForm_tracciaAggiungiPartecipanteBtn:hover {
    background-color: #005fa1;
}
#artistForm_btnSelectImage:pressed,
#prodottoForm_confermaArtistaBtn:pressed,
#prodottoForm_btnSfoglia:pressed,
#prodottoForm_aggiungiPartecipanteSingoloBtn:pressed,
#prodottoForm_aggiungiTracciaBtn:pressed,
#prodottoForm_tracciaAggiungiPartecipanteBtn:pressed {
    background-color: #004577;
}

#artistForm_okButton,
#artistForm_cancelButton,
#prodottoForm_annullaBtn {
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 6px 12px;
    min-width: 90px;
    margin-left: 8px;
}
#artistForm_okButton {
    background-color: #28a745;
}
#artistForm_okButton:disabled {
    background-color: #a5d6a7;
    color: #ececec;
}
#artistForm_okButton:hover:!disabled {
    background-color: #218838;
}
#artistForm_okButton:pressed:!disabled {
    background-color: #1e7e34;
}
#artistForm_cancelButton,
#prodottoForm_annullaBtn {
    background-color: #dc3545;
}
#artistForm_cancelButton:hover,
#prodottoForm_annullaBtn:hover {
    background-color: #c82333;
}
#artistForm_cancelButton:pressed,
#prodottoForm_annullaBtn:pressed {
    background-color: #bd2130;
}

#prodottoForm_salvaBtn,
#prodottoForm_salvaModificheBtn {
    background-color: #25a000;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 6px 14px;
    min-width: 90px;
    margin-left: 8px;
}
#prodottoForm_salvaBtn:hover,
#prodottoForm_salvaModificheBtn:hover {
    background-color: #1e7e34;
}
#prodottoForm_salvaBtn:pressed,
#prodottoForm_salvaModificheBtn:pressed {
    background-color: #196e29;
}

